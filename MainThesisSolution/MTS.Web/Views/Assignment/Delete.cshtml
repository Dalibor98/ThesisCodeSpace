@using MTS.Web.Models.Curriculum.Assignment
@model AssignmentDto
@{
    ViewData["Title"] = "Delete Assignment";
}

<form method="post" asp-action="Delete">
    <input type="hidden" name="assignmentCode" value="@Model.AssignmentCode" />
    <div class="card shadow border-0 mt-4">
        <div class="card-header bg-danger bg-gradient ml-0 py-3">
            <div class="row">
                <div class="col-12 text-center">
                    <h2 class="text-white">Delete Assignment</h2>
                </div>
            </div>
        </div>
        <div class="card-body p-4">
            <div class="border p-3">
                <div class="form-floating py-2 col-12">
                    <input asp-for="Title" disabled class="form-control border-0 shadow" />
                    <label asp-for="Title" class="ms-2"></label>
                </div>
                <div class="form-floating py-2 col-12">
                    <textarea asp-for="Description" disabled class="form-control border-0 shadow" style="height:150px;"></textarea>
                    <label asp-for="Description" class="ms-2"></label>
                </div>
                <div class="form-floating py-2 col-12">
                    <input asp-for="MaxPoints" disabled class="form-control border-0 shadow" />
                    <label asp-for="MaxPoints" class="ms-2"></label>
                </div>
                <div class="form-floating py-2 col-12">
                    <input asp-for="MinPoints" disabled class="form-control border-0 shadow" />
                    <label asp-for="MinPoints" class="ms-2"></label>
                </div>
                <div class="form-floating py-2 col-12">
                    <input asp-for="DueDate" disabled class="form-control border-0 shadow" />
                    <label asp-for="DueDate" class="ms-2"></label>
                </div>

                <div class="alert alert-danger mt-4">
                    <h5 class="text-center">Are you sure you want to delete this assignment?</h5>
                    <p class="text-center">This action cannot be undone.</p>
                </div>

                <div class="row mt-4">
                    <div class="col-6">
                        <a asp-controller="Course" asp-action="Details" asp-route-courseCode="@Model.CourseCode" class="btn btn-outline-primary form-control">Cancel</a>
                    </div>
                    <div class="col-6">
                        <button type="submit" class="btn btn-danger form-control">Delete</button>
                    </div>
                </div>
            </div>
        </div>
    </div>
</form>