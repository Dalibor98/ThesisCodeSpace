@using MTS.Web.Models.Curriculum
@using MTS.Web.Models.Curriculum.Quiz
@model QuizCreateDto
@{
    ViewData["Title"] = "Create Quiz";
}
<form method="post" class="mt-4">
    <div class="card shadow border-0">
        <div class="card-header bg-primary bg-gradient ml-0 py-3">
            <div class="row">
                <div class="col-12 text-center">
                    <h2 class="text-white">Create New Quiz</h2>
                </div>
            </div>
        </div>
        <div class="card-body p-4">
            <div class="row">
                <div class="col-md-12">
                    <input asp-for="CourseCode" type="hidden" />
                    <input asp-for="WeekCode" type="hidden" />
                    <div class="form-floating py-2 col-12">
                        <input asp-for="Title" class="form-control border-0 shadow" />
                        <label asp-for="Title" class="ms-2"></label>
                        <span asp-validation-for="Title" class="text-danger"></span>
                    </div>
                    <div class="row">
                        <div class="col-md-6">
                            <div class="form-floating py-2 col-12">
                                <input asp-for="StartTime" class="form-control border-0 shadow" type="datetime-local" />
                                <label asp-for="StartTime" class="ms-2"></label>
                                <span asp-validation-for="StartTime" class="text-danger"></span>
                            </div>
                        </div>
                        <div class="col-md-6">
                            <div class="form-floating py-2 col-12">
                                <input asp-for="TimeLimit" class="form-control border-0 shadow" type="number" min="1" />
                                <label asp-for="TimeLimit" class="ms-2">Time Limit (minutes)</label>
                                <span asp-validation-for="TimeLimit" class="text-danger"></span>
                            </div>
                        </div>
                    </div>
                    <div class="form-floating py-2 col-12">
                        <select asp-for="QuizType" class="form-control border-0 shadow">
                            <option value="MultipleChoice">Multiple Choice</option>
                            <option value="TextBased">Text Based</option>
                        </select>
                        <label asp-for="QuizType" class="ms-2">Quiz Type</label>
                        <span asp-validation-for="QuizType" class="text-danger"></span>
                    </div>
                    <div class="row pt-3">
                        <div class="col-6 col-md-3">
                            <a asp-controller="Course" asp-action="Details" asp-route-courseCode="@Model.CourseCode" class="btn btn-outline-primary form-control">Back to Course</a>
                        </div>
                        <div class="col-6 col-md-3">
                            <button type="submit" class="btn btn-primary form-control">Create</button>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</form>
@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}