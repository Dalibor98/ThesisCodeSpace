@using MTS.Web.Models.User.Student
@model StudentDto

<form asp-action="StudentDelete" asp-route-studentId="@Model.ID" asp-route-email="@Model.Email" method="post">
    <br />
    <div class="container border p-3">
        <h1 class="text-white text-center">Delete Student</h1>
        <hr />
        <div class="row">
            <div class="col-10">
                <div class="row">
                    <div class="col-12 pb-3 text-center">
                        <h3 class="text-danger">Are you sure you want to delete this student?</h3>
                    </div>
                    <div class="col-2">
                        <label class="control-label pt-2" style="font-size:20px;">Name</label>
                    </div>
                    <div class="col-10 pb-3">
                        <input asp-for="Name" class="form-control" disabled />
                    </div>
                    <div class="col-2">
                        <label class="control-label pt-2" style="font-size:20px;">Major</label>
                    </div>
                    <div class="col-10 pb-3">
                        <input asp-for="Major" class="form-control" disabled />
                    </div>
                    <div class="col-2">
                        <label class="control-label pt-2" style="font-size:20px;">Email</label>
                    </div>
                    <div class="col-10 pb-3">
                        <input asp-for="Email" class="form-control" disabled />
                    </div>
                    <div class="col-2">
                        <label class="control-label pt-2" style="font-size:20px;">Enrollment Year</label>
                    </div>
                    <div class="col-10 pb-3">
                        <input asp-for="EnrollmentYear" class="form-control" disabled />
                    </div>
                    <div class="col-2">
                        <label class="control-label pt-2" style="font-size:20px;">University ID</label>
                    </div>
                    <div class="col-10 pb-3">
                        <input asp-for="UniversityId" class="form-control" disabled />
                    </div>
                    <div class="col-5 offset-2">
                        <a asp-action="StudentIndex" class="btn-primary btn form-control">Back to List</a>
                    </div>
                    <div class="col-5">
                        <input type="submit" value="Delete" class="btn btn-danger form-control" />
                    </div>
                </div>
            </div>
        </div>
    </div>
</form>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}